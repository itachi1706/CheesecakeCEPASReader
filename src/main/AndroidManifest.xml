<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.itachi1706.cepaslib">

    <uses-permission android:name="android.permission.NFC" />

    <application
        android:name="com.itachi1706.cepaslib.CEPASReaderApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:ignore="UnusedAttribute">
        <activity
            android:name="com.itachi1706.cepaslib.activity.ReadingTagActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Scanning Card..."
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.itachi1706.cepaslib.activity.BackgroundTagActivity"
            android:configChanges="keyboardHidden|orientation"
            android:enabled="false"
            android:label="Scan EZ-Link Card"
            android:launchMode="singleTop"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/filter_nfc" />
        </activity>
        <activity
            android:name="com.itachi1706.cepaslib.activity.CardInfoActivity"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/${applicationId}.card" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itachi1706.cepaslib.activity.TripGMapsActivity"
            android:label="@string/title_activity_trip_gmaps" />
        <activity
            android:name="com.itachi1706.cepaslib.activity.SupportedCardsActivity"
            android:label="@string/supported_cards"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>
