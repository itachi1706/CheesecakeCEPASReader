<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_title">
        <SwitchPreference
            android:title="@string/launch_from_background"
            android:persistent="false"
            android:key="pref_launch_from_background"/>
        <ListPreference
            android:title="@string/setting_dark_mode"
            android:summary="%s"
            android:defaultValue="default"
            android:entries="@array/dark_mode"
            android:entryValues="@array/dark_mode_items"
            android:key="pref_dark_mode" />
    </PreferenceCategory>
</PreferenceScreen>
